<form asp-action="AddMeme" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Wybierz obraz</label>
        <input type="file" name="formFile" class="form-control" accept="image/*" />
    </div>

    <div class="mb-3">
        <label>Tekst promptu</label>
        <textarea name="promptText" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Dodaj meme + prompt</button>
</form>