@model IEnumerable<dynamic>

<h2>Ranking graczy</h2>

<div class="mb-3">
    <a asp-action="GetRanking" asp-route-sortOrder="desc" class="btn btn-primary">Sortuj malejąco</a>
    <a asp-action="GetRanking" asp-route-sortOrder="asc" class="btn btn-secondary">Sortuj rosnąco</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Gracz</th>
            <th>Punkty</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.ElementAt(i).Username</td>
                <td>@Model.ElementAt(i).Points</td>
            </tr>
        }
    </tbody>
</table>